# Flake8 configuration for Advanced Rubik's Cube Simulator

[flake8]
# Base configuration
max-line-length = 88
extend-ignore = 
    # Black compatibility
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    
    # Docstring requirements (handled by pydocstyle)
    D100,  # Missing docstring in public module
    D104,  # Missing docstring in public package
    D105,  # Missing docstring in magic method
    D107,  # Missing docstring in __init__
    
    # Type checking (handled by mypy)
    F401,  # imported but unused (can be false positive with TYPE_CHECKING)

# File patterns to exclude
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    .coverage,
    htmlcov,
    docs/_build,
    .tox

# Complexity settings
max-complexity = 10
max-cognitive-complexity = 12

# Import settings  
import-order-style = google
application-import-names = rcsim

# Per-file ignores
per-file-ignores =
    # Tests can have longer lines and ignore some style rules
    tests/*:E501,D100,D101,D102,D103,D104,D105,D106,D107
    # __init__.py files can have unused imports
    __init__.py:F401
    # Setup files can ignore docstring requirements  
    setup.py:D100,D103
    # Example files can be more relaxed
    examples/*:D100,D101,D102,D103,D104,D105,D106,D107
    # Scripts can be more relaxed
    scripts/*:D100,D103

# Docstring settings
docstring-convention = numpy
doctests = True

# Specific plugin configurations
# flake8-bugbear
extend-select = B,C90,F,W,E

# flake8-comprehensions  
extend-select = C4

# flake8-simplify
extend-select = SIM