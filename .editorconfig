# EditorConfig configuration for Advanced Rubik's Cube Simulator
# https://editorconfig.org/

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Configuration files
[*.{yaml,yml}]
indent_size = 2

[*.{json,toml}]
indent_size = 2

# Web files
[*.{html,css,js,ts}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Documentation
[*.{md,rst}]
indent_size = 2
trim_trailing_whitespace = false  # Preserve markdown formatting

# Makefiles require tabs
[Makefile]
indent_style = tab

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Git files
[.gitignore]
indent_size = 2

[.gitmodules]
indent_size = 2